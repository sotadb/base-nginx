#!/bin/sh

case $1 in
	http-check)
		/usr/bin/curl --fail -so /dev/null http://localhost/nginx-health > /dev/null 2>&1
		return $?
		;;
	https-check)
		/usr/bin/curl --fail -so /dev/null http://localhost/nginx-health > /dev/null 2>&1
		return $?
		;;
	*)
		echo "Usage: $0 (http-check|https-check)"
		;;
esac
